{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "compounds": [
    {
      "name": "itwin-viewer-desktop",
      "configurations": [
        "[BACKEND] itwin-viewer-desktop",
        "[FRONTEND] itwin-viewer-desktop"
      ]
    }
  ],
  "configurations": [
    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Web Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceFolder}/packages/modules/web-viewer-react/node_modules/jest/bin/jest.js",
        "--runInBand",
        "--watch"
      ],
      "cwd": "${workspaceFolder}/packages/modules/web-viewer-react",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    },
    {
      "name": "Base Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceFolder}/packages/modules/viewer-react/node_modules/jest/bin/jest.js",
        "--runInBand",
        "--watch"
      ],
      "cwd": "${workspaceFolder}/packages/modules/viewer-react",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9230
    },
    {
      /* PARTIAL */ "name": "[BACKEND] itwin-viewer-desktop",
      "cwd": "${workspaceFolder}/packages/apps/desktop-viewer-test",
      "type": "pwa-node",
      "request": "launch",
      "console": "internalConsole",
      "outputCapture": "std",
      "runtimeExecutable": "${workspaceFolder}/common/temp/node_modules/.bin/electron",
      "runtimeArgs": [
        "${workspaceFolder}/packages/apps/desktop-viewer-test/lib/backend/main.js",
        "--remote-debugging-port=9223"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "presentation": {
        "group": "desktop-starter"
      }
    },
    {
      /* PARTIAL */ "name": "[FRONTEND] itwin-viewer-desktop",
      "type": "pwa-chrome",
      "request": "attach",
      "port": 9223,
      "timeout": 90000,
      "presentation": {
        "group": "desktop-starter"
      }
    },
    {
      "name": "Create iTwin Viewer",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "${workspaceFolder}/packages/modules/create-itwin-viewer/bin.js"
      ],
      "cwd": "${workspaceFolder}/packages/modules/create-itwin-viewer",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
