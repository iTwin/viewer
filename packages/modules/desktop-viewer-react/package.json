{
  "name": "@itwin/desktop-viewer-react",
  "version": "2.0.0-dev.21",
  "description": "Configurable iTwin.js viewer for desktop applications",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/cjs/index.d.ts",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "repository": "https://github.com/itwin/viewer/tree/main/packages/modules/desktop-viewer-react",
  "scripts": {
    "start": "concurrently \"npm:build:cjs -- -w\" \"npm:build:esm -- -w\"",
    "build": "npm run -s build:cjs && npm run -s build:esm",
    "build:cjs": "tsc 1>&2 --outDir lib/cjs",
    "build:esm": "tsc 1>&2 --module ES2020 --outDir lib/esm",
    "prod-build": "tsc -b",
    "test": "",
    "test-watch": "jest --watch",
    "clean": "rimraf lib",
    "rebuild": "npm run clean && npm run build"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "@itwin/viewer-react": "2.0.0-dev.21"
  },
  "devDependencies": {
    "@itwin/appui-abstract": "rc",
    "@itwin/appui-layout-react": "rc",
    "@itwin/appui-react": "rc",
    "@itwin/build-tools": "rc",
    "@itwin/components-react": "rc",
    "@itwin/core-backend": "rc",
    "@itwin/core-bentley": "rc",
    "@itwin/core-common": "rc",
    "@itwin/core-electron": "rc",
    "@itwin/core-frontend": "rc",
    "@itwin/core-geometry": "rc",
    "@itwin/core-markup": "rc",
    "@itwin/core-orbitgt": "rc",
    "@itwin/core-quantity": "rc",
    "@itwin/core-react": "rc",
    "@itwin/core-telemetry": "rc",
    "@itwin/electron-authorization": "latest",
    "@itwin/imodel-components-react": "rc",
    "@itwin/presentation-common": "rc",
    "@itwin/presentation-components": "rc",
    "@itwin/presentation-frontend": "rc",
    "@itwin/reality-data-client": "latest",
    "@itwin/webgl-compatibility": "rc",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^10.4.4",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.19",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.9",
    "concurrently": "^5.2.0",
    "copyfiles": "^2.1.0",
    "electron": "^14.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "typescript": "~4.3.0"
  },
  "peerDependencies": {
    "@itwin/core-bentley": "rc",
    "@itwin/core-common": "rc",
    "@itwin/core-electron": "rc",
    "@itwin/core-frontend": "rc",
    "@itwin/electron-authorization": "latest",
    "electron": "^14.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\](?!@bentley/ui).+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|svg?.+)$": "<rootDir>/src/tests/mocks/fileMock.ts",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "test",
      ".d.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**"
    ]
  },
  "keywords": [
    "Bentley",
    "iModel",
    "iModelJs",
    "iTwin"
  ]
}
