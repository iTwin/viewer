{
  "name": "@itwin/desktop-viewer-react",
  "version": "2.0.0-dev.16",
  "description": "Configurable iTwin.js viewer for desktop applications",
  "main": "lib/index.js",
  "module": "build/index.js",
  "types": "lib/index.d.ts",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "repository": "https://github.com/itwin/viewer/tree/main/packages/modules/desktop-viewer-react",
  "scripts": {
    "start": "concurrently npm:watch-build npm:watch-scss npm:watch-images",
    "watch-build": "concurrently \"npm:dev-build -- -w\" \"npm:prod-build -- -w\"",
    "watch-scss": "nodemon -e scss --watch src --exec \"npm run dev-build-scss\"",
    "watch-images": "nodemon -e * --watch src/images --exec \"npm run dev-copy-images\"",
    "build": "npm run dual-build && npm run build-scss && npm run copy-images && npm run copy-public",
    "dual-build": "concurrently npm:dev-build npm:prod-build",
    "dev-build": "tsc -p development.tsconfig.json",
    "prod-build": "tsc -b",
    "build-scss": "concurrently npm:dev-build-scss npm:prod-build-scss",
    "dev-build-scss": "copyfiles -u1 \"./src/**/*.scss\" ./build",
    "prod-build-scss": "copyfiles -u1 \"./src/**/*.scss\" ./lib",
    "copy-images": "concurrently npm:dev-copy-images npm:prod-copy-images",
    "dev-copy-images": "copyfiles -u1 \"./src/images/**\" ./build",
    "prod-copy-images": "copyfiles -u1 \"./src/images/**\" ./lib",
    "copy-public": "concurrently npm:dev-copy-public npm:prod-copy-public",
    "dev-copy-public": "copyfiles -u1 \"./public/**/*\" ./build/public",
    "prod-copy-public": "copyfiles -u1 \"./public/**/*\" ./lib/public",
    "test": "",
    "test-watch": "jest --watch",
    "clean:build": "rimraf lib build",
    "rebuild": "npm run clean:build && npm run build"
  },
  "files": [
    "lib/**/*",
    "build/**/*"
  ],
  "devDependencies": {
    "@bentley/imodelhub-client": "workspace:*",
    "@bentley/itwin-client": "workspace:*",
    "@bentley/product-settings-client": "workspace:*",
    "@bentley/telemetry-client": "workspace:*",
    "@itwin/appui-abstract": "workspace:*",
    "@itwin/appui-layout-react": "workspace:*",
    "@itwin/appui-react": "workspace:*",
    "@itwin/components-react": "workspace:*",
    "@itwin/core-bentley": "workspace:*",
    "@itwin/core-backend": "workspace:*",
    "@itwin/core-common": "workspace:*",
    "@itwin/core-electron": "workspace:*",
    "@itwin/core-geometry": "workspace:*",
    "@itwin/core-frontend": "workspace:*",
    "@itwin/core-markup": "workspace:*",
    "@itwin/core-quantity": "workspace:*",
    "@itwin/core-orbitgt": "workspace:*",
    "@itwin/core-react": "workspace:*",
    "@itwin/imodel-components-react": "workspace:*",
    "@itwin/presentation-common": "workspace:*",
    "@itwin/presentation-components": "workspace:*",
    "@itwin/presentation-frontend": "workspace:*",
    "@itwin/webgl-compatibility": "workspace:*",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^10.4.4",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.19",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.9",
    "concurrently": "^5.2.0",
    "copyfiles": "^2.1.0",
    "electron": "^11.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^26.1.1",
    "typescript": "~4.3.0"
  },
  "dependencies": {
    "@itwin/viewer-react": "workspace:*"
  },
  "peerDependencies": {
    "@bentley/itwin-client": "workspace:*",
    "@bentley/imodelhub-client": "workspace:*",
    "@bentley/product-settings-client": "workspace:*",
    "@bentley/telemetry-client": "workspace:*",
    "@itwin/appui-abstract": "workspace:*",
    "@itwin/appui-layout-react": "workspace:*",
    "@itwin/appui-react": "workspace:*",
    "@itwin/components-react": "workspace:*",
    "@itwin/core-backend": "workspace:*",
    "@itwin/core-bentley": "workspace:*",
    "@itwin/core-common": "workspace:*",
    "@itwin/core-electron": "workspace:*",
    "@itwin/core-frontend": "workspace:*",
    "@itwin/core-geometry": "workspace:*",
    "@itwin/core-markup": "workspace:*",
    "@itwin/core-orbitgt": "workspace:*",
    "@itwin/core-quantity": "workspace:*",
    "@itwin/core-react": "workspace:*",
    "@itwin/imodel-components-react": "workspace:*",
    "@itwin/presentation-common": "workspace:*",
    "@itwin/presentation-components": "workspace:*",
    "@itwin/presentation-frontend": "workspace:*",
    "@itwin/webgl-compatibility": "workspace:*",
    "electron": "^11.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\](?!@bentley/ui).+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|svg?.+)$": "<rootDir>/src/tests/mocks/fileMock.ts",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "test",
      ".d.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**"
    ]
  },
  "keywords": [
    "Bentley",
    "iModel",
    "iModelJs",
    "iTwin"
  ]
}
