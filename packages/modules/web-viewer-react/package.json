{
  "name": "@itwin/web-viewer-react",
  "version": "5.0.0-dev.4",
  "description": "Configurable iTwin.js viewer for web applications",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/cjs/index.d.ts",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "repository": "https://github.com/itwin/viewer/tree/main/packages/modules/web-viewer-react",
  "scripts": {
    "start": "concurrently \"npm:build:cjs -- -w\" \"npm:build:esm -- -w\"",
    "build": "npm run -s build:cjs && npm run -s build:esm",
    "build:cjs": "tsc 1>&2 --outDir lib/cjs",
    "build:esm": "tsc 1>&2 --module ES2020 --outDir lib/esm",
    "test": "jest",
    "test-watch": "jest --watch",
    "clean": "rimraf lib",
    "rebuild": "npm run clean && npm run build",
    "lint": "eslint \"src/**/*.ts*\"  1>&2",
    "lint:fix": "npm run -s lint -- --fix"
  },
  "dependencies": {
    "@itwin/imodels-client-management": "^6.0.0-dev.2",
    "@itwin/viewer-react": "workspace:*"
  },
  "devDependencies": {
    "@itwin/appui-abstract": "rc",
    "@itwin/appui-react": "^5.5.0",
    "@itwin/build-tools": "rc",
    "@itwin/components-react": "^5.5.0",
    "@itwin/core-bentley": "rc",
    "@itwin/core-common": "rc",
    "@itwin/core-frontend": "rc",
    "@itwin/core-geometry": "rc",
    "@itwin/core-markup": "rc",
    "@itwin/core-orbitgt": "rc",
    "@itwin/core-quantity": "rc",
    "@itwin/core-react": "^5.5.0",
    "@itwin/ecschema-metadata": "rc",
    "@itwin/ecschema-rpcinterface-common": "rc",
    "@itwin/imodel-components-react": "^5.5.0",
    "@itwin/presentation-common": "rc",
    "@itwin/presentation-components": "^5.12.0",
    "@itwin/presentation-frontend": "rc",
    "@itwin/webgl-compatibility": "rc",
    "@itwin/unified-selection-react": "^1.0.0",
    "@itwin/unified-selection": "^1.3.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^26.0.4",
    "@types/node": "^20",
    "@types/react": "^18.2.9",
    "@types/react-dom": "^18.2.4",
    "@types/react-redux": "^7.1.9",
    "concurrently": "^5.2.0",
    "copyfiles": "^2.1.0",
    "eslint": "^9.13.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.1.0",
    "jest-environment-jsdom": "^29.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.0",
    "typescript": "~5.6.2"
  },
  "peerDependencies": {
    "@itwin/core-bentley": "rc",
    "@itwin/core-common": "rc",
    "@itwin/core-frontend": "rc",
    "@itwin/core-react": "^5.5.0",
    "@itwin/ecschema-rpcinterface-common": "rc",
    "@itwin/presentation-frontend": "rc",
    "@itwin/presentation-common": "rc",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\](?!@bentley/ui).+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|svg?.+)$": "<rootDir>/src/tests/mocks/fileMock.ts",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "test",
      ".d.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**"
    ],
    "testEnvironment": "jsdom"
  },
  "keywords": [
    "Bentley",
    "iModel",
    "iModelJs",
    "iTwin"
  ]
}
