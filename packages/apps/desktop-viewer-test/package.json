    "@types/node": "^18.12.0",
    "@types/react": "^18.2.9",
    "@types/react-dom": "^18.2.4",
    "cpx2": "4.2.0",
    "cross-env": "^5.2.1",
    "electron-devtools-installer": "^2.2.3",
    "eslint": "^7.11.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.29.0",
    "typescript": "~5.0.2",
    "webpack": "4.42.0"
  },
  "eslintConfig": {
    "extends": [
      "../../../common/scripts/.eslintrc.ts.json"
    ],
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./tsconfig.backend.json"
      ]
    }
  }
}
