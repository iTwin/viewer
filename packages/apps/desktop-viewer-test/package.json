    "@itwin/presentation-frontend": "workspace:*",
    "@itwin/webgl-compatibility": "workspace:*",
    "@reach/router": "~1.3.4",
    "dotenv-flow": "^3.2.0",
    "electron": "^11.1.0",
    "minimist": "^1.2.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
