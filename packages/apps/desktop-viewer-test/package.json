{
  "name": "@itwin/desktop-viewer-test",
  "version": "0.1.0",
  "private": true,
  "os": [
    "win32",
    "linux",
    "darwin"
  ],
  "engines": {
    "node": ">=10.17.0 <15.0"
  },
  "scripts": {
    "build": "",
    "build:desktop": "npm run -s build:frontend && npm run -s build:backend",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:frontend": "react-scripts build",
    "clean": "rimraf lib build dist",
    "copy": "npm run copy:assets && npm run copy:enUS",
    "copy:assets": "cpx \"./assets/*\" ./build/assets/",
    "copy:enUS": "cpx \"./build/locales/en/*\" ./build/locales/en-US/",
    "electron": "electron lib/backend/main.js",
    "electron:debug": "cross-env NODE_ENV=development electron lib/backend/main.js",
    "lint": "eslint --config package.json --no-eslintrc \"./src/**/*.{ts,tsx}\" 1>&2",
    "start": "npm run build:backend && run-p \"start:frontend\" \"electron:debug\"",
    "start:frontend": "react-scripts start",
    "test": "",
    "pseudolocalize": "betools pseudolocalize --englishDir ./public/locales/en --out ./public/locales/en-PSEUDO"
  },
  "browserslist": [
    "electron 8.0.0"
  ],
  "dependencies": {
    "@bentley/icons-generic-webfont": "^1.0.15",
    "@bentley/imodelhub-client": "workspace:*",
    "@bentley/itwin-client": "workspace:*",
    "@bentley/product-settings-client": "workspace:*",
    "@bentley/telemetry-client": "workspace:*",
    "@itwin/appui-abstract": "workspace:*",
    "@itwin/appui-layout-react": "workspace:*",
    "@itwin/appui-react": "workspace:*",
    "@itwin/components-react": "workspace:*",
    "@itwin/core-backend": "workspace:*",
    "@itwin/core-bentley": "workspace:*",
    "@itwin/core-common": "workspace:*",
    "@itwin/core-electron": "workspace:*",
    "@itwin/core-frontend": "workspace:*",
    "@itwin/core-geometry": "workspace:*",
    "@itwin/core-i18n": "workspace:*",
    "@itwin/core-markup": "workspace:*",
    "@itwin/core-orbitgt": "workspace:*",
    "@itwin/core-quantity": "workspace:*",
    "@itwin/core-react": "workspace:*",
    "@itwin/ecschema-metadata": "workspace:*",
    "@itwin/express-server": "workspace:*",
    "@itwin/desktop-viewer-react": "workspace:*",
    "@itwin/imodel-browser-react": "^0.11.0",
    "@itwin/itwinui-css": "^0.18.1",
