    "@itwin/presentation-backend": "^3.0.0",
    "@itwin/presentation-common": "^3.0.0",
    "@itwin/presentation-components": "^3.0.0",
    "@itwin/presentation-frontend": "^3.0.0",
    "@itwin/reality-data-client": "^0.7.0",
    "@itwin/webgl-compatibility": "^3.0.0",
    "@reach/router": "~1.3.4",
    "dotenv-flow": "^3.2.0",
    "electron": "^14.0.0",
